@model Transaction

@{
    ViewData["Title"] = "Add Transaction";
}

<h1>Adicionar Produto</h1>

<form asp-action="AddTransaction" method="post">
    <div class="form-group">
        <input asp-for="Date" type="hidden" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label asp-for="ProductName">Nome do Produto</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount">Valor</label>
        <input asp-for="Amount" class="form-control" step="0.01" />
    </div>
    <div class="form-group">
        <label asp-for="Type">Tipo</label>
        <select asp-for="Type" class="form-control">
            <option value="Credit">Creditar</option>
            <option value="Debit">Debitar</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
